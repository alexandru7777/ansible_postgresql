#------------------------------------------------------------------------------
# FILE LOCATIONS
#------------------------------------------------------------------------------

# Where to write the main server log file.
log_destination = 'stderr'

# Directory where the log files will be stored.
log_directory = 'pg_log'

# Where to log messages of level WARNING or higher.
logging_collector = on

# Where to store temporary files.
temp_tablespaces = 'pg_temp'

#------------------------------------------------------------------------------
# CONNECTIONS AND AUTHENTICATION
#------------------------------------------------------------------------------

#Listening on
listen_addresses = '*'
                                        # comma-separated list of addresses;
                                        # defaults to 'localhost'; use '*' for all
                                        # (change requires restart)
port = 5432                             # (change requires restart)
max_connections = 100                   # (change requires restart)
#superuser_reserved_connections = 3     # (change requires restart)


# SSL settings (not enabled in this example).
ssl = off
ssl_cert_file = ''
ssl_key_file = ''

#------------------------------------------------------------------------------
# RESOURCE USAGE (except WAL)
#------------------------------------------------------------------------------

# Memory settings.
shared_buffers = 128MB
work_mem = 4MB
maintenance_work_mem = 64MB

# Query parallelism settings.
max_parallel_workers = 4
max_parallel_workers_per_gather = 2

#------------------------------------------------------------------------------
# WRITE AHEAD LOG
#------------------------------------------------------------------------------

# WAL settings.
wal_level = minimal
max_wal_senders = 0
wal_keep_segments = 0

#------------------------------------------------------------------------------
# ERROR REPORTING AND LOGGING
#------------------------------------------------------------------------------

# Log minimal information for connections, queries, and errors.
log_min_messages = warning
log_min_error_statement = warning
log_min_duration_statement = -1
